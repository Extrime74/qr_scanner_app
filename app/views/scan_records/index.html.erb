<h1>Список записей</h1>
<%= link_to "Назад", root_path, class: "btn btn-secondary" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Грузополучатель</th>
      <th>АПЗГР</th>
      <th>Короб</th>
      <th>Артикул</th>
      <th>Размер</th>
      <th>Количество</th>
    </tr>
  </thead>
  <tbody>
    <% @scan_records.each do |record| %>
      <tr>
        <td><%= record.id %></td>
        <td><%= record.consignee %></td>
        <td><%= record.apzgr_number %></td>
        <td><%= record.box_number %></td>
        <td><%= record.article %></td>
        <td><%= record.size %></td>
        <td><%= record.quantity %></td>
        <td>
          <%= button_to "Удалить", scan_record_path(record), method: :delete, data: { confirm: "Вы уверены?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
